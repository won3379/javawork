package classes.constructor;

//참조 자료형 - Person 클래스 정의
public class Person {
	String name;         //사람의 이름
	float height;        //키
	float weight;        //몸무게
	
	
	//기본생성자
	public Person() {}
	//메서드
	public void showPersonInfo() {
		System.out.printf("이름은: %s   "+name,"키는:%.1f   "+height,"몸무게는:%f"+weight);
	}
	
}
